<div class="page-header">
  <h3>Character #<%= @character.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Movie</dt>
      <dd>
        <a href="http://localhost:3000/movies/<%= @character.movie_id %>">
          <%= @character.movie.title %>
        </a>
      </dd>

      <dt>Actor</dt>
      <dd>
        <a href="http://localhost:3000/actors/<%= @character.actor_id %>">
          <%= @character.actor.name %>
        </a>
      </dd>

      <dt>Name</dt>
      <dd><%= @character.name %></dd>

      <div class="row">
        <div class="col-md-12">
          <form action="/create_character" method="post">
            <!-- Hidden input for authenticity token to protect from forgery -->
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

            <!-- Label and input for movie_id -->
            <div class="form-group">
              <label for="movie_id" class="control-label">
                Movies
              </label>


              <select name="movie_id" class="form-control">
                <% Movie.all.each do |movie| %>
                <option value="<%= movie.id %>"><%= movie.title %></option>
                <% end %>
              </select>
              <a href="/movies/new">
                or add a new movie
              </a>
            </div>





            <div class="form-group">
              <label for="actor_id" class="control-label">
                Actors
              </label>


              <select name="actor_id" class="form-control">
                <% Actor.all.each do |actor| %>
                <option value="<%= actor.id %>"><%= actor.name %></option>
                <% end %>
              </select>
            <a href="/actors/new">
              or add a new actor
            </a>
            </div>


            <!-- Label and input for name -->
            <div class="form-group">
              <label for="name" class="control-label">
                Name
              </label>

              <input type="text" id="name" name="name" placeholder="Name" class="form-control" >
            </div>

            <button class="btn btn-success">
              Create Character
            </button>
            or
            <a href="/characters">Cancel</a>
          </form>
        </div>
      </div>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/characters" class="btn btn-primary">
        Back
      </a>
      <a href="/characters/<%= @character.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_character/<%= @character.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
